extends ./page.jade

block body
  h1 Register
  each err in errors
    p Error: #{err}
  form(method="post")
    p Name: 
      input(type="text", name="name")
    p Email: 
      input(type="text", name="email")
    p Password (at least 10 characters):
      input(type="password", name="password")
    p Confirm password:
      input(type="password", name="password2")
    br
    input(type="submit", value="Register")
